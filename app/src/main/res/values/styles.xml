<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="titleText">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="normalText">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="smallText">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">#787676</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="editTextTitleStyle" parent="titleText">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="editTextNormalStyle" parent="normalText">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>
</resources>